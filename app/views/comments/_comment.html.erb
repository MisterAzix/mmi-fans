<li class="list-group-item">
    <small><strong><%= comment.user.username %> :</strong> <%= comment.content %></small>
    <div class="d-flex justify-content-between align-items-center">
        <% if current_user && (current_user.is_admin? || comment.user == current_user) %>
            <small><%= link_to 'Delete', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %></small>
        <% end %>
        <small class="text-muted ms-auto"><%= time_ago_in_words(comment.created_at).capitalize %> ago</small>
    </div>
</li>